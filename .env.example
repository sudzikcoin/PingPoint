# ==============================================================================
# PingPoint Development Environment Variables
# ==============================================================================
# IMPORTANT:
# - Copy this file to .env: cp .env.example .env
# - Fill in real values - DO NOT commit .env to version control
# - Generate secrets with: openssl rand -base64 32
# ==============================================================================

# ==============================================================================
# CRITICAL - Server will not start without these
# ==============================================================================

# Database connection string (PostgreSQL)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/pingpoint

# JWT Secret for session tokens (REQUIRED - minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-key-minimum-32-characters-long

# ==============================================================================
# IMPORTANT - Features may be limited without these
# ==============================================================================

# Node environment (development, production, test)
NODE_ENV=development

# Server port (default: 5000)
PORT=5000

# Anthropic API key for PDF parsing with Claude
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# Resend API key for sending emails
# Get from: https://resend.com/
RESEND_API_KEY=re_xxxxx

# Email sender address (must be verified in Resend)
MAIL_FROM=no-reply@yourdomain.com

# Public URL for email links and callbacks
PINGPOINT_PUBLIC_URL=http://localhost:5000

# Stripe for payment processing
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
STRIPE_PRICE_PRO_MONTHLY=price_xxxxx

# ==============================================================================
# OPTIONAL - Will use sensible defaults if not set
# ==============================================================================

# Admin panel credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-admin-password

# Twilio for SMS notifications (optional)
# Get from: https://www.twilio.com/console
# TWILIO_ACCOUNT_SID=ACxxxxx
# TWILIO_AUTH_TOKEN=xxxxx
# TWILIO_PHONE_NUMBER=+1234567890

# Logging configuration
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true

# Background job control
ENABLE_CRON_JOBS=true

# Rate limiting (can be disabled for debugging)
ENABLE_RATE_LIMITING=true

# CORS configuration (strict mode enforced in production)
# Set to 'false' to allow all origins in production (not recommended)
# CORS_STRICT=true

# Frontend URL for CORS (include full URL with scheme, e.g., https://myapp.com)
# This URL will be allowed in production CORS. Must match exactly what browsers send.
FRONTEND_URL=http://localhost:5000

# Skip environment validation (for debugging only)
# SKIP_ENV_VALIDATION=true
